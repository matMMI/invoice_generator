{
  "buildCommand": "cd frontend && npm run build",
  "devCommand": "cd frontend && npm run dev",
  "installCommand": "pnpm install --prefix frontend && pip install -r api/requirements.txt",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "/api/main.py"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.12",
      "maxDuration": 10
    }
  }
}
